# Postgres (local dev)
POSTGRES_USER=policy_mesh
POSTGRES_PASSWORD=change-me
POSTGRES_DB=policy_mesh
POSTGRES_PORT=5432

# App/migrations connection string (use postgresql+psycopg for psycopg3)
DATABASE_URL=postgresql+psycopg://policy_mesh:change-me@localhost:5432/policy_mesh
# Audit persistence (default: enabled when DATABASE_URL is set)
# AUDIT_ENABLED=true

# Providers (T-103)
# Ollama: base URL (compose uses http://ollama:11434, host uses http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434
# OpenAI: API key (required for openai provider; no default)
# OPENAI_API_KEY=sk-...
# Optional OpenAI base URL override (e.g. proxy)
# OPENAI_BASE_URL=https://api.openai.com
# Provider HTTP timeout in seconds (default 60)
# PROVIDER_TIMEOUT_SECONDS=60
