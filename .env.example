# Postgres (local dev)
POSTGRES_USER=policy_mesh
POSTGRES_PASSWORD=change-me
POSTGRES_DB=policy_mesh
POSTGRES_PORT=5432

# App/migrations connection string (use postgresql+psycopg for psycopg3)
DATABASE_URL=postgresql+psycopg://policy_mesh:change-me@localhost:5432/policy_mesh
# Audit persistence (default: enabled when DATABASE_URL is set)
# AUDIT_ENABLED=true

# Providers (T-103)
# Ollama: base URL (compose uses http://ollama:11434, host uses http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434
# OpenAI: API key (required for openai provider; no default)
# OPENAI_API_KEY=sk-...
# Optional OpenAI base URL override (e.g. proxy)
# OPENAI_BASE_URL=https://api.openai.com
# Provider HTTP timeout in seconds (default 60)
# PROVIDER_TIMEOUT_SECONDS=60

# Easy-mode USD cost threshold (T-204)
# When both COST_MAX_USD_FOR_LOCAL and OPENAI_INPUT_USD_PER_1K_TOKENS are set,
# the DecisionEngine uses an approximate USD-based cost gate:
#   tokens ~= chars / COST_CHARS_PER_TOKEN
#   cost_usd ~= (tokens / 1000) * OPENAI_INPUT_USD_PER_1K_TOKENS
# and prefers local when cost_usd <= COST_MAX_USD_FOR_LOCAL.
# COST_MAX_USD_FOR_LOCAL=0.09
# OPENAI_INPUT_USD_PER_1K_TOKENS=0.0015  # e.g. $1.50 per 1M tokens â†’ 0.0015 per 1K
# COST_CHARS_PER_TOKEN=4                  # heuristic (tokens ~= chars / 4)
